<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="250dp"
            android:layout_height="50sp"
            android:id="@+id/Orderdetial"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="50sp"
            android:id="@+id/OrderTolmoney"
            android:layout_below="@id/Orderdetial"
            android:layout_gravity="center"
           />
        <TextView
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:id="@+id/id"
            android:layout_below="@id/Orderdetial"
            android:layout_toRightOf="@id/OrderTolmoney"></TextView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="50sp"
            android:id="@+id/time"
            android:layout_below="@id/Orderdetial"
            android:layout_toRightOf="@id/OrderTolmoney"></TextView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/Pay"
            android:layout_below="@id/Orderdetial"
            android:text="支付订单"
            android:backgroundTint="#fc3c09"
            android:layout_gravity="right"
            android:layout_toRightOf="@id/time" ></Button>
    </RelativeLayout>

</android.support.v7.widget.CardView>