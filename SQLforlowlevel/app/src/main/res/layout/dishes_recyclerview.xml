<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dishesimage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/DishName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/dishesimage"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/DishPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/DishName"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp" />
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:id="@+id/edit_number"
            android:layout_below="@id/DishPrice"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/addbt"
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:backgroundTint="#e5e0dd"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="-" />

            <Button
                android:id="@+id/subbt"
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:backgroundTint="#e5e0dd"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="+" />

            <TextView
                android:id="@+id/edt"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#e3e3de"
                android:gravity="center"
                android:text="0"
                android:textSize="12dp">
                <requestFocus />
            </TextView>
        </RelativeLayout>
        <Button
            android:id="@+id/intoBaeket"
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/edit_number"
            android:layout_below="@id/DishPrice"
            android:backgroundTint="#faa979"
            android:text="加入购物车"></Button>


    </RelativeLayout>
</android.support.v7.widget.CardView>