<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.com.sqlforlowlevel.InsertResturant">
    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/appbar"
            android:layout_height="match_parent">
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed|snap"
                android:id="@+id/toolbar1"
                android:background="?attr/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        </RelativeLayout></android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/co"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="请输入饭店名字"
        android:id="@+id/re_name"
        ></EditText>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/re_adress"
        android:hint="请输入饭店地址"
        android:layout_below="@id/re_name"></EditText>
    <Button
        android:id="@+id/b01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/re_adress"
        android:text="选择饭店照片"
        android:background="#81c2f4"
        />
    <ImageView
        android:id="@+id/iv01"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/b01"
        /></RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/insert1"
        android:background="#3ba6f8"
        android:text="确认添加"
        android:layout_below="@id/co" ></Button>
</RelativeLayout>
